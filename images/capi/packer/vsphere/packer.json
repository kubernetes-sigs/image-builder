{
  "variables": {
    "ansible_common_vars": "",
    "ansible_extra_vars": "guestinfo_datasource_slug={{user `guestinfo_datasource_slug`}} guestinfo_datasource_ref={{user `guestinfo_datasource_ref`}} ",
    "boot_order": "disk,cdrom",
    "boot_wait": "10s",
    "build_timestamp": "{{timestamp}}",
    "build_version": "{{user `build_name`}}-kube-{{user `kubernetes_semver`}}",
    "cluster": "",
    "containerd_version": null,
    "containerd_sha256": null,
    "containerd_url": "https://storage.googleapis.com/cri-containerd-release/cri-containerd-{{user `containerd_version`}}.linux-amd64.tar.gz",
    "convert_to_template": "true",
    "datastore": "",
    "disable_public_repos": "false",
    "disk_controller_type": "pvscsi",
    "disk_thin_provisioned": "true",
    "existing_ansible_ssh_args": "{{env `ANSIBLE_SSH_ARGS`}}",
    "extra_debs": "",
    "extra_repos": "",
    "extra_rpms": "",
    "folder": "",
    "format": "",
    "guestinfo_datasource_slug": "https://raw.githubusercontent.com/vmware/cloud-init-vmware-guestinfo",
    "guestinfo_datasource_ref": "master",
    "guest_os_type": null,
    "host": "",
    "insecure_connection": "false",
    "kubernetes_cni_rpm_version": null,
    "kubernetes_cni_deb_version": null,
    "kubernetes_cni_semver": null,
    "kubernetes_cni_source_type": null,
    "kubernetes_cni_http_source": null,
    "kubernetes_semver": null,
    "kubernetes_source_type": null,
    "kubernetes_http_source": null,
    "kubernetes_rpm_version": null,
    "kubernetes_deb_version": null,
    "kubernetes_rpm_repo": null,
    "kubernetes_rpm_gpg_key": null,
    "kubernetes_deb_repo": null,
    "kubernetes_deb_gpg_key": null,
    "kubernetes_rpm_gpg_check": null,
    "kubernetes_container_registry": null,
    "network": "",
    "network_card": "vmxnet3",
    "password": "",
    "reenable_public_repos": "true",
    "remove_extra_repos": "false",
    "ssh_username": "builder",
    "ssh_password": "builder",
    "vm_version": "13",
    "username": "",
    "vcenter_server": ""
  },
  "builders": [
    {
      "type": "vsphere-iso",
      "name": "{{user `build_name`}}",

      "vcenter_server":      "{{user `vcenter_server`}}",
      "username":            "{{user `username`}}",
      "password":            "{{user `password`}}",
      "insecure_connection": "{{user `insecure_connection`}}",

      "vm_name": "{{user `build_version`}}",
      "datastore": "{{user `datastore`}}",
      "folder": "{{user `folder`}}",
      "host":     "{{user `host`}}",
      "convert_to_template": "true",
      "cluster": "{{user `cluster`}}",
      "network": "{{user `network`}}",



      "vm_version": "{{user `vm_version`}}",
      "CPUs": 1,
      "boot_order": "disk,cdrom",
      "cpu_cores": 1,
      "RAM": 2048,
      "disk_size": 20480,
      "disk_controller_type": "{{user `disk_controller_type`}}",
      "disk_thin_provisioned": "{{user `disk_thin_provisioned`}}",
      "network_card": "{{user `network_card`}}",
      "guest_os_type": "{{user `guest_os_type`}}",

      "boot_wait": "{{user `boot_wait`}}",
      "http_directory": "./packer/vsphere/linux/{{user `distro_name`}}/http/",
      "iso_urls": "{{user `iso_urls`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "communicator": "ssh",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "4h",
      "boot_command": [
        "{{user `boot_command_prefix`}}",
        "http://{{ .HTTPIP }}:{{ .HTTPPort }}",
        "{{user `boot_command_suffix`}}"
      ],
      "shutdown_command": "echo '{{user `ssh_password`}}' | sudo -S -E sh -c 'usermod -L {{user `ssh_username`}} && {{user `shutdown_command`}}'"
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./ansible/playbook.yml",
      "ansible_env_vars": [
        "ANSIBLE_SSH_ARGS='{{user `existing_ansible_ssh_args`}} -o IdentitiesOnly=yes'",
        "ANSIBLE_REMOTE_TEMP='/tmp/.ansible/'"
      ],
      "extra_arguments": [
        "--extra-vars",
        "{{user `ansible_common_vars`}}",
        "--extra-vars",
        "{{user `ansible_extra_vars`}}"
      ]
   }
  ]
}
