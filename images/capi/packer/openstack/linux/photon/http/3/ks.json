{
  "disk": "/dev/sda",
  "hostname": "localhost",
  "packages": [
    "bash",
    "bc",
    "bridge-utils",
    "bzip2",
    "ca-certificates",
    "cloud-init",
    "cpio",
    "cracklib-dicts",
    "dbus",
    "e2fsprogs",
    "file",
    "filesystem",
    "findutils",
    "gdbm",
    "grep",
    "gzip",
    "iana-etc",
    "initramfs",
    "iptables",
    "iproute2",
    "iputils",
    "libtool",
    "linux",
    "motd",
    "net-tools",
    "openssh-server",
    "open-vm-tools",
    "pkg-config",
    "photon-release",
    "photon-repos",
    "procps-ng",
    "rpm",
    "sed",
    "sudo",
    "tdnf",
    "tzdata",
    "util-linux",
    "vim",
    "which"
  ],
  "password": {
    "age": -1,
    "crypted": true,
    "text": "*"
  },
  "postinstall": [
    "#!/bin/sh",
    "useradd -U -d /home/builder -m --groups wheel builder && echo 'builder:builder' | chpasswd",
    "echo 'builder ALL=(ALL) NOPASSWD: ALL' >/etc/sudoers.d/builder",
    "chmod 440 /etc/sudoers.d/builder",
    "systemctl enable sshd",
    "tdnf clean all",
    "swapoff -a",
    "rm -f /swapfile"
  ]
}
